<Window x:Class="SP_04._26_ex6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Analyzer" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="InputTextBox" Height="30" Margin="0,0,0,10" 
                     Text="Введіть текст..." 
                     Foreground="Gray" 
                     GotFocus="InputTextBox_GotFocus" 
                     LostFocus="InputTextBox_LostFocus"/>
            <Button Content="Аналізувати" Height="30" Click="AnalyzeButton_Click"/>
            <TextBlock x:Name="ResultTextBlock" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>